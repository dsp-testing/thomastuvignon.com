{
  "name": "thomas-tuvignon",
  "version": "1.0.0",
  "description": "Thomas Tuvignon",
  "scripts": {
    "js": "rollup -c",
    "sass": "node-sass src/scss -o src/css",
    "css": "postcss src/css/*.css -u autoprefixer cssnano -r --no-map",
    "build": "npm run js && npm run sass && eleventy && npm run css",
    "watch:js": "rollup -c -w",
    "watch:sass": "node-sass --watch src/scss -o src/css",
    "watch:eleventy": "eleventy --watch",
    "serve": "eleventy --serve",
    "debug": "DEBUG=* eleventy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tomtuv/thomas-tuvignon.git"
  },
  "license": "ISC",
  "homepage": "https://thomastuvignon.com",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@babel/core": "^7.11.6",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "aos": "^2.3.4",
    "autoprefixer": "^10.0.1",
    "bootstrap": "^4.5.2",
    "cssnano": "^4.1.10",
    "font-awesome": "^4.7.0",
    "jquery": "^3.5.1",
    "luxon": "^1.25.0",
    "node-sass": "^4.14.1",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.0.0",
    "rollup": "^2.28.2",
    "rollup-plugin-terser": "^7.0.2"
  }
}
